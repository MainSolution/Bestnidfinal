<h1> Usuarios registrados</h1>

<table class="table">

	<tr>
		<th> Usuario </th>
		<th> Foto </th>
		<th> Acciones </th>
		<th><%= link_to "Registrarse" , new_user_path(), class: 'btn btn-info btn-danger'%></th>
	</tr>

	<% usuarios = User.all %>
	<% usuarios.each do |usuario| %>
		<tr>
			
			<td> <%= link_to usuario.nick, usuario %> </td>
			<td><%= image_tag usuario.foto, :width => 128, :height => 128 %> </td> 
			<td>
				<%= link_to "Editar", edit_user_path(usuario) ,  class: 'btn btn-info btn-sm'%>
				<%= link_to "Eliminar", destroy_user_path(usuario), data: { confirm: 'EstÃ¡s seguro?' },  class: 'btn btn-danger btn-sm'%>
			</td>
		</tr>
	<% end %>

	<% if User.all.size == 0 %>
		<tr> <td colspan="3"> No hay usuarios registrados </td> </tr>
	<% end %>

</table>
