<!DOCTYPE html>
<html>
<head>
  <title>BestnidOficial</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

	<%= render 'layouts/header' %>
	
	<div class="container"> 
		<div class="col-md-2">
			<br/>
			<br/>
			<br/>
			<br/>
			<tr>
			<td><h3>Categorias</h3></td>
			<% if can? :index , Category %>
				 <td><%= link_to "Editar", categories_path,  class: 'btn btn-info btn-sm' %></td>
			<%end%>
		    </tr>
			<% categories = Category.all %>
			<% categories.each do |c| %>
			<tr>
			<td> <li><%= link_to Category.find(c.id).nombre, c %></td> </tr>
			<% end %>
    		
    		
    	</div>



		<div class="col-md-10">    
			<% if flash[:notice] %>
				<div class="alert alert-success" role='alert'>
					<%= flash[:notice] %>
				</div>
				<%end%>
			<% if flash[:alert] %>
			    <div class="alert alert-error"><%= flash[:alert] %>
			    </div>	
			<%end%>
		<%= yield %>
		</div>
	</div>


</body>
</html>