<% @categorias = Category.all%>
<% if @categorias.size != 0 %>

<table class="table">
<% @categorias.each do |c| %>
			<tr>
			<% if c.eliminado == false %>
				  <td><%= link_to Category.find(c.id).nombre, c %></td>
					<td><%= link_to "Editar", edit_category_path(c) , class: 'btn btn-info btn-sm' %></td>
		
					<td><%= link_to "Eliminar", c, method: :delete, data: {confirm: "Estás seguro? Si eliminas una categoria se eliminarán los articulos asociados"},class: 'btn btn-danger btn-sm'%></td>
				<%else%>

				<tr class="danger"><td><%= link_to Category.find(c.id).nombre, c %></td> 
					<td><%= link_to "Restaurar", recover_category_path(c)  ,class: 'btn btn-danger btn-sm' %></td> </tr>
				<%end%>
			<br/>
			<br/>
<%end%>
</td>
</table>
<%else%>
<div class="alert alert-success" role="alert"><tr class="success"> <td colspan="3">No hay ninguna categoría creada </td> </tr></div>
	
<%end%>
    		